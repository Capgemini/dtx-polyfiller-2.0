{
	"name":"DTX Polyfiller 2",
	"description":"Fix DTX for Chrome and add a plethora of useful features!",
	"version":"2.8.1",
	"icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
	
	"manifest_version":2,
	"content_security_policy": "default-src 'none'; script-src 'self'; connect-src 'self' https://www.gov.uk",
	
	"permissions":[
		"storage",
		"*://*.capgemini.com/DTX.NET/*"
	],
	"content_scripts":[
		{
			"matches":[
				"*://*.capgemini.com/DTX.NET/*"
			],
			"css":[
				"dtx.css"
			],
			"js":[
				"dtx.js"
			]
		},
		{
			"matches":[
				"*://*.capgemini.com/DTX.NET/SubmitClaims.aspx"
			],
			"js":[
				"submit-claims/submit-claims-injector.js"
			]
		}
	],
	
	"options_ui":{
		"page":"options.html",
		"open_in_tab":false
	},
	"browser_action":{
		"default_popup":"options.html"
	},
	
	"web_accessible_resources":[
		"submit-claims/submit-claims-overrides.js",
		"images/*"
	]
}