{
	"name":"DTX Polyfiller 2",
	"description":"Fix DTX for Chrome and add a plethora of useful features!",
	"version":"2.8.1",
	"manifest_version":2,
	"content_security_policy": "default-src 'self'; connect-src https://www.gov.uk;",
	"permissions":[
		"storage",
		"http://*.capgemini.com/DTX.NET/*",
		"https://*.capgemini.com/DTX.NET/*"
	],
	"content_scripts":[
		{
			"matches":[
				"http://*.capgemini.com/DTX.NET/*",
				"https://*.capgemini.com/DTX.NET/*"
			],
			"css":[
				"dtx.css"
			],
			"js":[
				"dtx.js"
			]
		},
		{
			"matches":[
				"http://*.capgemini.com/DTX.NET/SubmitClaims.aspx",
				"https://*.capgemini.com/DTX.NET/SubmitClaims.aspx"
			],
			"js":[
				"submit-claims/submit-claims-injector.js"
			]
		}
	],
	"options_ui":{
		"page":"options.html",
		"open_in_tab":false
	},
	"browser_action":{
		"default_popup":"options.html"
	},
	"web_accessible_resources":[
		"submit-claims/submit-claims-overrides.js",
		"images/*"
	]
}